{
  "name": "board-crawler-functions",
  "scripts": {
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch & tsc-alias",
    "serve": "pnpm run build && firebase emulators:start --only functions",
    "shell": "pnpm run build && firebase functions:shell",
    "start": "pnpm run shell",
    "deploy": "pnpm run build && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "prebuild": "rm -rf lib"
  },
  "lint-staged": {
    "**/*.{js,ts,json,css,md}": "prettier --write",
    "**/*.{ts}": "eslint --fix --max-warnings 0"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/functions-framework": "^3.4.0",
    "express": "^4.19.2",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^5.0.1",
    "node-telegram-bot-api": "^0.66.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.0",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@board-crawler/eslint-config": "workspace:*",
    "@board-crawler/typescript-config": "workspace:*",
    "firebase-functions-test": "^3.2.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^4.9.5"
  },
  "private": true
}